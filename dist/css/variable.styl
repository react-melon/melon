// font-size
$-melon-medium-font-size = 16px
$-melon-xx-small-font-size = ($-melon-medium-font-size * 0.75) // 12
$-melon-x-small-font-size = ($-melon-medium-font-size * 0.875) // 14
$-melon-small-font-size = ($-melon-medium-font-size * 0.9375) // 16
$-melon-large-font-size = ($-melon-medium-font-size * 1.125) // 18
$-melon-x-large-font-size = ($-melon-medium-font-size * 1.25) // 20
$-melon-xx-large-font-size = ($-melon-medium-font-size * 1.375) // 22
$-melon-xxx-large-font-size = ($-melon-medium-font-size * 1.5) // 24
$-melon-xxxx-large-font-size = ($-melon-medium-font-size * 2.25) // 36

$-melon-font-family = 'Helvetica Neue' Helvetica 'Microsoft YaHei' Arial SimSun sans-serif;

// global transition switch
$-melon-enable-transition-effect = true

// all prefix definitions
$-melon-class-prefix = ui
$-melon-state-prefix = state
$-melon-variant-prefix = variant

$-melon-z-depth = {
    '1': '0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)',
    '2': '0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15)',
    '3': '0 12px 15px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19)',
    '4': '0 16px 28px 0 rgba(0, 0, 0, 0.22), 0 25px 55px 0 rgba(0, 0, 0, 0.21)',
    '5': '0 27px 24px 0 rgba(0, 0, 0, 0.2), 0 40px 77px 0 rgba(0, 0, 0, 0.22)'
};

$-melon-z-index = {
    dialog: 10,
    snackbar: 10
};

